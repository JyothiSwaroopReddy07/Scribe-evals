# DeepScribe Evaluation Suite - Environment Configuration Template
# Copy this file to .env and fill in your API keys

# ============================================================================
# API Keys (REQUIRED)
# ============================================================================

# OpenAI API Key (Required for LLM evaluators)
# Get your key at: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=sk-proj-your-key-here

# Anthropic API Key (Optional - for Claude models in ensemble)
# Get your key at: https://console.anthropic.com/account/keys
# ANTHROPIC_API_KEY=sk-ant-your-key-here

# ============================================================================
# Model Configuration
# ============================================================================

# Default LLM model to use for evaluations
# Options: gpt-4o-mini, gpt-4o, gpt-4-turbo-preview, gpt-3.5-turbo
# Recommended: gpt-4o-mini (best cost/performance balance)
DEFAULT_LLM_MODEL=gpt-4o-mini

# Temperature for LLM evaluations (0.0 = deterministic, 1.0 = creative)
# Recommended: 0.0 for consistent evaluation results
EVALUATION_TEMPERATURE=0.0

# Maximum tokens for LLM responses
MAX_TOKENS=2000

# ============================================================================
# Evaluation Settings
# ============================================================================

# Number of notes to evaluate (set to 0 or omit for all notes)
SAMPLE_SIZE=100

# Enable LLM-based evaluators
ENABLE_LLM_JUDGE=true

# Enable deterministic metrics
ENABLE_DETERMINISTIC=true

# ============================================================================
# Intelligent Routing Configuration (Cost Optimization)
# ============================================================================

# Enable intelligent routing to reduce LLM API costs (30-50% savings)
ENABLE_INTELLIGENT_ROUTING=true

# Routing mode: aggressive | balanced | conservative
# - balanced: 30-50% savings, 98-99% accuracy (RECOMMENDED)
ROUTING_MODE=balanced

# ============================================================================
# Performance Settings
# ============================================================================

# Number of parallel workers
MAX_WORKERS=4

# Batch size
BATCH_SIZE=10

# ============================================================================
# Logging & Output
# ============================================================================

LOG_LEVEL=INFO
OUTPUT_DIR=results
CACHE_DIR=data
